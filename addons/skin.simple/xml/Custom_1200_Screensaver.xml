<?xml version="1.0" encoding="utf-8"?>
<!-- Placed in
    <your Kodi install dir>\addons\skin.simple\xml

    Kodi documentation on skinning
    https://kodi.wiki/view/Skinning
    https://kodi.wiki/view/Skinning_Manual
    https://kodi.wiki/view/HOW-TO:Add_a_new_view_type_to_the_skin
    https://kodi.wiki/view/HOW-TO:Add_a_new_window_or_dialog_via_skinning
 -->
<window id="1200" type="window">
    <backgroundcolor>black</backgroundcolor>
    <stretchmode>Fullscreen</stretchmode>
    <controls>
        <control type="label">
            <description>Ishanga White Dot</description>
            <height>10</height>
            <aligny>center</aligny>
            <align>right</align>
            <right>20</right>
            <bottom>30</bottom>
            <label>.</label>
            <textcolor>$INFO[Window(11200).Property(color)]</textcolor>
            <!-- For built in font sizes, see ./Font.xml -->
            <font>font52_title</font>
        </control>
    </controls>
    
</window>
